{
  "name": "flare",
  "version": "0.0.0",
  "description": "A multi-platform flash card app",
  "scripts": {
    "ng": "ng",
    "dev": "npm run config && ng serve",
    "build": "npm run config && ng build",
    "build:prod": "npm run config && ng build -c=production",
    "deploy": "npm run clean && npm run build:prod && firebase deploy",
    "test": "ng test",
    "smoke": "ts-node scripts/smoke-server",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "precommit": "pretty-quick --staged",
    "config": "ts-node scripts/set-env.ts",
    "bundle-report": "webpack-bundle-analyzer dist/flare/stats.json",
    "clean": "npx rimraf dist"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~7.2.0",
    "@angular/cdk": "^7.2.1",
    "@angular/common": "~7.2.0",
    "@angular/compiler": "~7.2.0",
    "@angular/core": "~7.2.0",
    "@angular/fire": "^5.1.1",
    "@angular/flex-layout": "^7.0.0-beta.22",
    "@angular/forms": "~7.2.0",
    "@angular/material": "^7.2.1",
    "@angular/platform-browser": "~7.2.0",
    "@angular/platform-browser-dynamic": "~7.2.0",
    "@angular/router": "~7.2.0",
    "@ngrx/effects": "^7.0.0",
    "@ngrx/store": "^7.0.0",
    "@ngrx/store-devtools": "^7.0.0",
    "core-js": "^2.5.4",
    "firebase": "^5.7.2",
    "material-design-icons": "^3.0.1",
    "rxjs": "~6.3.3",
    "tslib": "^1.9.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.12.1",
    "@angular/cli": "~7.2.1",
    "@angular/compiler-cli": "~7.2.0",
    "@angular/language-service": "~7.2.0",
    "@types/jasmine": "~3.3.5",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~10.12.18",
    "codelyzer": "~4.5.0",
    "dotenv": "^6.2.0",
    "husky": "^1.3.1",
    "jasmine-core": "~3.3.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.1.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "live-server": "^1.2.1",
    "prettier": "^1.15.3",
    "pretty-quick": "^1.8.0",
    "protractor": "~5.4.0",
    "rimraf": "^2.6.3",
    "ts-node": "^7.0.1",
    "tslint": "~5.12.0",
    "typescript": "~3.2.2",
    "webpack-bundle-analyzer": "^3.0.3"
  }
